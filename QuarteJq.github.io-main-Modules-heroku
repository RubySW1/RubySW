    <script>
		 
        console.log('Пасхалка не работает идите нахуй');
        if (getComputedStyle(document.body).getPropertyValue('--has-pasxalka-work') == "true") {
            if(window.devtools.isOpen) { window.location.href = getComputedStyle(document.body).getPropertyValue('--pasxalka'); }
            window.addEventListener('devtoolschange', event => { window.location.href = getComputedStyle(document.body).getPropertyValue('--pasxalka'); });
        }
        function getURL(toAppend) {
            return window.location.href + toAppend;
        }
        function copyText(text) {
            navigator.clipboard.writeText(text);
            Toast.add({
                text: 'Ссылка на модуль успешно скопирована в буфер обмена',
                color: '#33FF33',
                autohide: true,
                delay: 5000
            });
            return;
        }
        function buildPage() {
            $('#modulesList').append('<h2>Heroku modules trashcan</h2> <span class="hint">Longtap or click right mouse button to copy</span>');
            $.get(url='modules.json', function(modules) {
                for (var i = 0; i < modules.length; i++) {
                    filename = modules[i].filename;
                    name = modules[i].name;
                    $("#modulesList").append(`<a href="${filename}" oncontextmenu="copyText('${getURL(filename)}'); return false;">${name}</a>`);
                }
                jQuery(document).ready(function(){
                    jQuery('#modulesList').append('<hr width="295"><a href="..">Go back</a>');
                });
            });
        }
        buildPage();
    </script>
